<% include partials/header %>

<div class="container">
    <h1 class="text-center">Create a New Campgrounds</h1>

    <form action="/campgrounds" method="POST">
        <div class="col-6 mx-auto mt-3">
            <div class="form-group">
                <label for="formGroupExampleInput">Name</label>
                <input placeholder="Enter name" name="name" type="text" class="form-control" id="formGroupExampleInput" required>
            </div>
            <div class="form-group">
                <label for="formGroupExampleInput2">Image</label>
                <input placeholder="Enter image url" name="image" type="text" class="form-control" id="formGroupExampleInput2" required>
            </div>
            <div class="form-group">
                <label for="Desciption">Description</label>
                <textarea name = "desciption" class="form-control" rows="5" id="comment"></textarea>
            </div>
            <button type="submit" class="btn btn-primary btn-block">Submit</button>
        </div>
    </form>
</div>


<% include partials/footer %>