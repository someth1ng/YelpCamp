<% include partials/header %>

<div class="container">
    <header class="jumbotron">
        <h1>Welcome To YelpCamp!</h1>
        <p>View our hand-picked campgrounds from all over the world</p>
        <hr class="my-4">
        <a class="btn btn-primary btn-lg" href="/campgrounds/new" role="button">Add New Campgrounds</a>
    </header>

    <!-- style="display:flex; flex-wrap:wrap;" -->
    <div class="row inline-flex">
        <% campgrounds.forEach(c => { %>
            <div class="col-md-3 col-sm-6">
                <figure class="figure">
                    <img src="<%= c.image %>" class="figure-img img-fluid rounded" alt="A generic square placeholder image with rounded corners in a figure.">
                    <figcaption class="figure-caption text-center"><%= c.name %></figcaption>
                    <div class="text-center">
                        <a class="btn btn-outline-info btn-sm" href="/campgrounds/<%= c._id %>" role="button">More Info</a>
                    </div>
                </figure>
            </div>
        <% }); %>
    </div>



    <a href="/">Go Back!</a>
</div>

<% include partials/footer %>